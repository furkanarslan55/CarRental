@model List<CarRentalEmployeeApp.ViewModels.CustomerViewModel>

@{
    ViewData["Title"] = "Müşteri Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-5">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark mb-1">Müşteri Listesi</h4>
            <span class="text-muted small">Sistemdeki kayıtlı müşterileri yönetin.</span>
        </div>

        <div class="mt-3 mt-md-0 position-relative">
            <span class="position-absolute top-50 start-0 translate-middle-y ms-3 text-muted">
                <i class="fa-solid fa-magnifying-glass"></i>
            </span>
            <input type="text" id="searchInput" class="form-control form-control-lg border-0 bg-white shadow-sm ps-5" placeholder="Müşteri ara..." style="min-width: 300px; font-size: 0.95rem;">
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-3 text-muted opacity-25">
                    <i class="fa-solid fa-users-slash fa-4x"></i>
                </div>
                <h5 class="fw-bold text-muted">Kayıtlı müşteri yok</h5>
                <p class="text-muted small mb-0">Henüz sisteme eklenmiş bir müşteri bulunmuyor.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-secondary text-uppercase small fw-bold" style="width: 5%;">ID</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold">MÜŞTERİ</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold">İLETİŞİM BİLGİLERİ</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold text-center" style="width: 18%;">
                                SORUMLU
                            </th>

                            <th class="py-3 pe-4 text-end text-secondary text-uppercase small fw-bold">İŞLEMLER</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @foreach (var customer in Model)
                        {
                            <tr class="customer-row">
                                <td class="ps-4 fw-bold text-muted small">#@customer.Id</td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex justify-content-center align-items-center me-3" style="width: 40px; height: 40px; font-weight: bold;">
                                            @(customer.Name?.Length > 0 ? customer.Name.Substring(0, 1) : "")@(customer.Surname?.Length > 0 ? customer.Surname.Substring(0, 1) : "")
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark customer-name">@customer.Name @customer.Surname</div>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="text-dark small mb-1">
                                            <i class="fa-regular fa-envelope me-2 text-muted" style="width:16px;"></i>@customer.Email
                                        </span>
                                        <span class="text-muted small">
                                            <i class="fa-solid fa-phone me-2 text-muted" style="width:16px;"></i>@customer.PhoneNumber
                                        </span>
                                    </div>
                                </td>
                                <td class="text-center">
                                    <div class="d-inline-flex align-items-center justify-content-center gap-3">
                                        <div class="rounded-circle bg-primary bg-opacity-10 text-primary
                            d-flex justify-content-center align-items-center"
                                             style="width: 38px; height: 38px; font-weight: bold;">
                                            @(string.IsNullOrEmpty(customer.EmployeeName)
                                                                                ? "?"
                                                                                : customer.EmployeeName.Substring(0, 1))
                                        </div>
                                        <div class="fw-bold text-dark">
                                            @customer.EmployeeName
                                        </div>
                                    </div>
                                </td>




                                <td class="pe-4 text-end">
                                    <div class="btn-group gap-2">
                                        <a asp-action="DetailsCustomer" asp-route-id="@customer.Id"
                                           class="btn btn-light btn-sm rounded-2 text-info shadow-sm"
                                           data-bs-toggle="tooltip" title="Detay">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>

                                        <a asp-action="UpdateCustomer" asp-route-id="@customer.Id"
                                           class="btn btn-light btn-sm rounded-2 text-warning shadow-sm"
                                           data-bs-toggle="tooltip" title="Düzenle">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>

                                        <form asp-action="DeleteCustomer" asp-route-id="@customer.Id" method="post" style="display:inline;" onsubmit="return confirm('Bu müşteriyi silmek istediğinize emin misiniz?');">
                                            <button type="submit" class="btn btn-light btn-sm rounded-2 text-danger shadow-sm" data-bs-toggle="tooltip" title="Sil">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Arama Scripti
        document.getElementById("searchInput")?.addEventListener("keyup", function () {
            let aranan = this.value.toLowerCase();
            let satirlar = document.getElementsByClassName("customer-row");

            for (let i = 0; i < satirlar.length; i++) {
                let satirMetni = satirlar[i].innerText.toLowerCase();
                satirlar[i].style.display = satirMetni.includes(aranan) ? "" : "none";
            }
        });

        // Tooltip Aktivasyonu (Bootstrap 5)
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}

<style>
    /* Tablo Hover Efekti */
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }

    /* Buton Hover */
    .btn-light:hover {
        background-color: #e9ecef;
        border-color: #dee2e6;
    }
</style>