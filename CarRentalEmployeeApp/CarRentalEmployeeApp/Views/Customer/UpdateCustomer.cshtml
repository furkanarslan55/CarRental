@model CarRentalEmployeeApp.ViewModels.CustomerUpdateViewModel

@{
    ViewData["Title"] = "Müşteri Bilgilerini Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold text-dark mb-1">Müşteri Güncelleme</h4>
                    <span class="text-muted small">Mevcut müşteri bilgilerini düzenleyin.</span>
                </div>
                <a href="@Url.Action("GetCustomerAll", "Customer")" class="btn btn-outline-secondary btn-sm px-3 rounded-2">
                    <i class="fa-solid fa-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>

            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body p-5">

                    @using (Html.BeginForm("UpdateCustomer", "Customer", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger border-0 shadow-sm rounded-2 mb-4">
                                <i class="fa-solid fa-circle-exclamation me-2"></i>Lütfen bilgileri kontrol ediniz.
                            </div>
                        }

                        <h6 class="text-uppercase text-muted fw-bold small mb-4">Kimlik Bilgileri</h6>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-medium text-secondary small">AD</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 text-muted"><i class="fa-regular fa-user"></i></span>
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control form-control-lg bg-light border-0 fs-6", placeholder = "Ad" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-medium text-secondary small">SOYAD</label>
                                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control form-control-lg bg-light border-0 fs-6", placeholder = "Soyad" })
                                @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>
                        </div>

                        <hr class="my-5 border-secondary border-opacity-10">

                        <h6 class="text-uppercase text-muted fw-bold small mb-4">İletişim ve Diğer Bilgiler</h6>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label class="form-label fw-medium text-secondary small">E-POSTA</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 text-muted"><i class="fa-regular fa-envelope"></i></span>
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg bg-light border-0 fs-6", type = "email", placeholder = "mail@ornek.com" })
                                </div>
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <div class="col-md-6">
                                <label class="form-label fw-medium text-secondary small">TELEFON</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 text-muted"><i class="fa-solid fa-phone"></i></span>
                                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control form-control-lg bg-light border-0 fs-6", placeholder = "05xx..." })
                                </div>
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-medium text-secondary small">ADRES</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 text-muted"><i class="fa-solid fa-map-location-dot"></i></span>
                                    @Html.TextBoxFor(m => m.Address, new { @class = "form-control form-control-lg bg-light border-0 fs-6", placeholder = "Açık adres..." })
                                </div>
                                @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger small mt-1 d-block" })
                            </div>

                            <div class="col-12">
                                <label class="form-label fw-medium text-secondary small">SORUMLU PERSONEL</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-0 text-muted">
                                        <i class="fa-solid fa-user-tie"></i>
                                    </span>

                                    @Html.DropDownListFor(
                                    m => m.EmployeeId,
                                                                Model.Employees,
                                                                "Personel Seçiniz",
                                                                new { @class = "form-control form-control-lg bg-light border-0 fs-6" }
                                                                )
                            </div>
                            @Html.ValidationMessageFor(m => m.EmployeeId, "", new { @class = "text-danger small mt-1 d-block" })
                        </div>

                                <div class="form-text text-muted small">Bu alan sadece bilgilendirme amaçlıdır veya yönetici tarafından değiştirilebilir.</div>
                            </div>
                   
                        <div class="d-flex justify-content-end align-items-center mt-5 gap-3">
                            <a href="@Url.Action("GetCustomerAll", "Customer")" class="btn btn-light px-4 py-2 rounded-2 text-muted fw-medium">
                                İptal
                            </a>
                            <button type="submit" class="btn btn-dark px-5 py-2 rounded-2 fw-medium shadow-sm">
                                <i class="fa-solid fa-floppy-disk me-2"></i>Güncellemeyi Kaydet
                            </button>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}