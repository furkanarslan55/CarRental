@model CarRentalEmployeeApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Giriş Yap";
    Layout = null;
}
@if (TempData["LoginFailed"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> <strong>Hata!</strong> @TempData["LoginFailed"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}

@if (TempData["LoginSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> <strong>Başarılı!</strong> @TempData["LoginSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Kapat"></button>
    </div>
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Giriş Yap - CarRental</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">

    <style>
        /* --- GÜNCELLENEN KISIM BAŞLANGIÇ --- */

        /* 1. html ve body'nin yüksekliğini %100 yapıyoruz */
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #0f0c29, #302b63, #24243e);
            /* 2. Modern Ortalama Yöntemi: Grid */
            display: grid;
            place-items: center; /* Hem dikey hem yatay tam ortalar */

            width: 100%;
        }

        /* Script dosyalarının hizalamayı bozmaması için */
        .login-wrapper {
            width: 100%;
            max-width: 400px;
            padding: 20px;
            box-sizing: border-box;
            /* Grid hücresinde tam merkezde durması için */
            justify-self: center;
        }

        /* --- GÜNCELLENEN KISIM BİTİŞ (Diğer stiller aynı kalabilir) --- */

        .glass-card {
            background: rgba(255, 255, 255, 0.05);
            backdrop-filter: blur(15px);
            -webkit-backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 16px;
            padding: 40px 30px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.5);
            width: 100%;
            /* Box-sizing eklemek taşmaları önler */
            box-sizing: border-box;
        }

        .brand-title {
            text-align: center;
            font-size: 2rem;
            font-weight: 600;
            margin: 0 0 10px 0;
            background: linear-gradient(to right, #ffffff, #a5a5a5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .brand-subtitle {
            text-align: center;
            color: #888;
            font-size: 0.9rem;
            margin-bottom: 30px;
        }

        .input-group {
            position: relative;
            margin-bottom: 20px;
        }

        .input-icon {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #888;
            transition: color 0.3s;
            pointer-events: none;
        }

        .form-control {
            width: 100%;
            padding: 12px 15px 12px 45px;
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: #fff;
            font-size: 1rem;
            outline: none;
            transition: all 0.3s ease;
            box-sizing: border-box;
        }

            .form-control:focus {
                border-color: #6a11cb;
                background: rgba(0, 0, 0, 0.5);
            }

                .form-control:focus + .input-icon {
                    color: #6a11cb;
                }

        .checkbox-container {
            display: flex;
            align-items: center;
            margin-bottom: 25px;
            color: #ccc;
            font-size: 0.9rem;
            cursor: pointer;
        }

            .checkbox-container input {
                margin-right: 10px;
                accent-color: #6a11cb;
                width: 16px;
                height: 16px;
            }

        .btn-login {
            width: 100%;
            padding: 12px;
            background: linear-gradient(to right, #6a11cb, #2575fc);
            border: none;
            border-radius: 8px;
            color: white;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: transform 0.2s, box-shadow 0.2s;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(37, 117, 252, 0.4);
            }

        .validation-msg {
            color: #ff6b6b;
            font-size: 0.8rem;
            margin-top: 5px;
            display: block;
        }
    </style>
</head>
<body>

    <div class="login-wrapper">
        <div class="glass-card">
            <h2 class="brand-title">CarRental</h2>
            <p class="brand-subtitle">Personel Paneli</p>

            <form asp-action="Login" method="post" autocomplete="off">

                <div class="input-group">
                    <input asp-for="Email" class="form-control" placeholder="E-Posta Adresi" />
                    <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"></polyline></svg>
                    <span asp-validation-for="Email" class="validation-msg"></span>
                </div>

                <div class="input-group">
                    <input asp-for="Password" type="password" class="form-control" placeholder="Şifre" />
                    <svg class="input-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
                    <span asp-validation-for="Password" class="validation-msg"></span>
                </div>

                <label class="checkbox-container">
                    <input asp-for="RememberMe" type="checkbox" />
                    <span>Beni hatırla</span>
                </label>

                <button type="submit" class="btn-login">
                    Giriş Yap
                </button>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>