@model List<CarRentalEmployeeApp.ViewModels.VehicleRentalListVM>

@{
    Layout = User.IsInRole("Admin")
        ? "~/Views/Shared/_Layout.cshtml"
        : "~/Views/Shared/_LayoutEmployee.cshtml";

    ViewData["Title"] = "Kiralanabilir Araçlar";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-semibold">Kiralanabilir Araçlar</h2>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-light border text-center py-4">
            <i class="bi bi-car-front fs-3 mb-2 d-block"></i>
            <strong>Size atanmış kiralanabilir araç bulunmamaktadır.</strong>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var vehicle in Model)
            {
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="card h-100 shadow-sm border-0 rounded-4">
                        <div class="card-body d-flex flex-column">

                            <!-- Header -->
                            <div class="mb-3">
                                <span class="badge bg-secondary-subtle text-dark mb-2">
                                    @vehicle.PlateNumber
                                </span>
                                <h5 class="fw-semibold mb-1">
                                    @vehicle.CarModel
                                </h5>
                            </div>

                            <!-- Details -->
                            <ul class="list-unstyled small text-muted mb-4">
                                <li>
                                    <i class="bi bi-calendar2 me-1"></i>
                                    Yıl: <strong>@vehicle.Year</strong>
                                </li>
                                <li>
                                    <i class="bi bi-speedometer2 me-1"></i>
                                    Km: <strong>@vehicle.Kilometer</strong>
                                </li>
                            </ul>

                            <!-- Action -->
                            <div class="mt-auto">
                                <a asp-controller="Rental"
                                   asp-action="Rent"
                                   asp-route-vehicleId="@vehicle.VehicleId"
                                   class="btn btn-primary w-100 rounded-3">
                                    Kirala
                                </a>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
