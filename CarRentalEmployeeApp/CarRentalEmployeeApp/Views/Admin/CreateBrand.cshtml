@model CarRentalEmployeeApp.ViewModels.CreateBrandViewModel

@{
    ViewData["Title"] = "Yeni Marka Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold text-dark mb-1">Marka Tanımla</h4>
                    <span class="text-muted small">Sisteme yeni bir araç markası ekleyin.</span>
                </div>
                <a asp-action="GetCarAll" class="btn btn-outline-secondary btn-sm px-3 rounded-2">
                    <i class="fa-solid fa-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>

            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body p-5">

                    <form asp-action="CreateBrand" method="post">
                        @Html.AntiForgeryToken()

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 shadow-sm rounded-2 mb-4 d-flex align-items-center">
                            <i class="fa-solid fa-circle-exclamation me-2"></i>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-medium text-secondary small">MARKA ADI</label>

                            <div class="input-group">
                                <span class="input-group-text bg-light border-0 text-muted">
                                    <i class="fa-solid fa-tag"></i>
                                </span>
                                <input asp-for="Name"
                                       class="form-control form-control-lg bg-light border-0 fs-6 @(ViewData.ModelState["Name"]?.Errors.Any() == true ? "is-invalid" : "")"
                                       placeholder="Örn: Mercedes-Benz" />
                            </div>

                            <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <hr class="my-4 border-secondary border-opacity-10">

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark btn-lg rounded-2 shadow-sm fw-medium">
                                <i class="fa-solid fa-save me-2"></i>Markayı Kaydet
                            </button>

                            <a asp-action="GetCarAll" class="btn btn-light btn-lg rounded-2 text-muted fw-medium border-0">
                                İptal
                            </a>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}