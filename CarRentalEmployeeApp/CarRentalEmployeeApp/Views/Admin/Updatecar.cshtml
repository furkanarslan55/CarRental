@model CarRentalEmployeeApp.ViewModels.UpdateCarViewModel
@using CarRentalEmployeeApp.Models

@{
    ViewData["Title"] = "Araç Güncelle";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark text-white rounded-top-4">
                    <h4 class="mb-0">
                        🚗 Araç Güncelle
                    </h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Updatecar" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="row g-4">

                            <!-- Plaka -->
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="PlateNumber" class="form-control" placeholder="Plaka" />
                                    <label asp-for="PlateNumber"></label>
                                </div>
                                <span asp-validation-for="PlateNumber" class="text-danger"></span>
                            </div>

                            <!-- Marka -->
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select asp-for="BrandId" class="form-select"
                                            asp-items="ViewBag.Brands">
                                        <option value="">Marka Seçiniz</option>
                                    </select>
                                    <label asp-for="BrandId">Marka</label>
                                </div>
                                <span asp-validation-for="BrandId" class="text-danger"></span>
                            </div>

                            <!-- Model -->
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <input asp-for="CarModel" class="form-control" placeholder="Model" />
                                    <label asp-for="CarModel"></label>
                                </div>
                                <span asp-validation-for="CarModel" class="text-danger"></span>
                            </div>

                            <!-- Yıl -->
                            <div class="col-md-3">
                                <div class="form-floating">
                                    <input asp-for="Year" class="form-control" placeholder="Yıl" />
                                    <label asp-for="Year">Model Yılı</label>
                                </div>
                            </div>

                            <!-- Kilometre -->
                            <div class="col-md-3">
                                <div class="form-floating">
                                    <input asp-for="Kilometer" class="form-control" placeholder="Km" />
                                    <label asp-for="Kilometer">Kilometre</label>
                                </div>
                            </div>

                            <!-- Araç Tipi -->
                            <div class="col-md-3">
                                <div class="form-floating">
                                    <input asp-for="Type" class="form-control" placeholder="Sedan, SUV..." />
                                    <label asp-for="Type">Araç Tipi</label>
                                </div>
                            </div>

                            <!-- Vites -->
                            <div class="col-md-3">
                                <div class="form-floating">
                                    <select asp-for="GearType" class="form-select"
                                            asp-items="Html.GetEnumSelectList<GearType>()">
                                    </select>
                                    <label asp-for="GearType">Vites</label>
                                </div>
                            </div>

                            <!-- Durum -->
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select asp-for="Status" class="form-select"
                                            asp-items="Html.GetEnumSelectList<VehicleStatus>()">
                                    </select>
                                    <label asp-for="Status">Araç Durumu</label>
                                </div>
                            </div>

                            <!-- Atama Durumu -->
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select asp-for="AssignmentStatus" class="form-select"
                                            asp-items="Html.GetEnumSelectList<AssignmentStatus>()">
                                    </select>
                                    <label asp-for="AssignmentStatus">Atama Durumu</label>
                                </div>
                            </div>

                            <!-- Sorumlu Çalışan -->
                            <div class="col-md-4">
                                <div class="form-floating">
                                    <select asp-for="AssignedToId" class="form-select"
                                            asp-items="ViewBag.Employee">
                                        <option value="">Çalışan Seçilmedi</option>
                                    </select>
                                    <label asp-for="AssignedToId">Sorumlu Çalışan</label>
                                </div>
                            </div>
                        </div>

                        <!-- Hasar Bilgileri -->
                        @if (Model.Damages.Any())
                        {
                            <hr class="my-4" />
                            <h5 class="mb-3">🛠 Hasar Kayıtları</h5>

                            <div class="table-responsive">
                                <table class="table table-hover align-middle">
                                    <thead class="table-light">
                                        <tr>
                                            <th>Tür</th>
                                            <th>Açıklama</th>
                                            <th>Tarih</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var damage in Model.Damages)
                                        {
                                            <tr>
                                                <td>@damage.DamageType</td>
                                                <td>@damage.Description</td>
                                                <td>@damage.ReportDate.ToShortDateString()</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }

                        <!-- Butonlar -->
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="AdminDashboard" class="btn btn-outline-secondary px-4">
                                İptal
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                Kaydet
                            </button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
