@model List<CarRentalEmployeeApp.ViewModels.BrandListVM>

@{
    ViewData["Title"] = "Marka Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-5">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark mb-1">Marka Yönetimi</h4>
            <span class="text-muted small">Tanımlı araç markaları ve filo istatistikleri.</span>
        </div>

        <div class="mt-3 mt-md-0 position-relative">
            <span class="position-absolute top-50 start-0 translate-middle-y ms-3 text-muted">
                <i class="fa-solid fa-magnifying-glass"></i>
            </span>
            <input type="text" id="searchInput" class="form-control form-control-lg border-0 bg-white shadow-sm ps-5" placeholder="Marka ara..." style="min-width: 300px; font-size: 0.95rem;">
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm rounded-3 mb-4 d-flex align-items-center" role="alert">
            <i class="fa-solid fa-circle-exclamation me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-3 text-muted opacity-25">
                    <i class="fa-solid fa-tags fa-4x"></i>
                </div>
                <h5 class="fw-bold text-muted">Marka tanımı bulunamadı</h5>
                <p class="text-muted small mb-0">Sistemde kayıtlı herhangi bir araç markası yok.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-secondary text-uppercase small fw-bold" style="width: 10%;">ID</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold">MARKA ADI</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold">OLUŞTURULMA TARİHİ</th>
                            <th class="py-3 pe-4 text-end text-secondary text-uppercase small fw-bold">FİLO DURUMU</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @foreach (var brand in Model)
                        {
                            <tr class="brand-row">
                                <td class="ps-4 text-muted fw-bold small">#@brand.Id</td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-dark bg-opacity-10 text-dark d-flex justify-content-center align-items-center me-3" style="width: 40px; height: 40px;">
                                            <i class="fa-solid fa-tag"></i>
                                        </div>
                                        <span class="fw-bold text-dark fs-6 brand-name">@brand.Name</span>
                                    </div>
                                </td>

                                <td>
                                    <div class="text-muted small">
                                        <i class="fa-regular fa-calendar me-2"></i>@brand.CreatedDate.ToString("dd.MM.yyyy")
                                        <span class="ms-1 text-secondary opacity-75">@brand.CreatedDate.ToString("HH:mm")</span>
                                    </div>
                                </td>

                                <td class="pe-4 text-end">
                                    @if (brand.VehicleCount > 0)
                                    {
                                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill fw-medium border border-primary border-opacity-10">
                                            <i class="fa-solid fa-car me-1"></i> @brand.VehicleCount Araç
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary bg-opacity-10 text-secondary px-3 py-2 rounded-pill fw-normal">
                                            Araç Yok
                                        </span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Arama Scripti
        document.getElementById("searchInput")?.addEventListener("keyup", function () {
            let aranan = this.value.toLowerCase();
            let satirlar = document.getElementsByClassName("brand-row");

            for (let i = 0; i < satirlar.length; i++) {
                let satirMetni = satirlar[i].innerText.toLowerCase();
                satirlar[i].style.display = satirMetni.includes(aranan) ? "" : "none";
            }
        });
    </script>
}

<style>
    /* Tablo Hover Efekti */
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }
</style>