@model List<CarRentalEmployeeApp.Models.Vehicle>

@{
    ViewData["Title"] = "Araç Filosu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-5">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark mb-1">Araç Filosu</h4>
            <span class="text-muted small">Toplam @Model.Count araç listeleniyor</span>
        </div>

        <div class="mt-3 mt-md-0 position-relative">
            <span class="position-absolute top-50 start-0 translate-middle-y ms-3 text-muted">
                <i class="fa-solid fa-magnifying-glass"></i>
            </span>
            <input type="text" id="searchInput" class="form-control form-control-lg border-0 bg-white shadow-sm ps-5" placeholder="Plaka veya model ara..." style="min-width: 300px; font-size: 0.95rem;">
        </div>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger border-0 shadow-sm rounded-3 mb-4 d-flex align-items-center" role="alert">
            <i class="fa-solid fa-circle-exclamation me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close ms-auto" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-3 text-muted opacity-25">
                    <i class="fa-solid fa-car-side fa-4x"></i>
                </div>
                <h5 class="fw-bold text-muted">Filoda araç bulunamadı</h5>
                <p class="text-muted small mb-4">Sisteme yeni bir araç ekleyerek başlayın.</p>
                <a href="/Car/Create" class="btn btn-primary rounded-pill px-4">
                    <i class="fa-solid fa-plus me-2"></i>Araç Ekle
                </a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-secondary text-uppercase small fw-bold">ARAÇ BİLGİSİ</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold">PLAKA & TEKNİK</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold">DURUM</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold">SORUMLU</th>
                            <th class="py-3 pe-4 text-end text-secondary text-uppercase small fw-bold" style="width: 140px;">İŞLEMLER</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @foreach (var car in Model)
                        {
                            <tr class="vehicle-row">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-dark bg-opacity-10 text-dark d-flex justify-content-center align-items-center me-3" style="width: 45px; height: 45px;">
                                            <i class="fa-solid fa-car"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark vehicle-name">@car.CarBrand.Name @car.CarModel</div>
                                            <div class="small text-muted">@car.Year Model</div>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex flex-column align-items-start">
                                        <span class="badge bg-light text-dark border border-secondary border-opacity-25 rounded-1 mb-1 font-monospace" style="letter-spacing: 1px;">
                                            @car.PlateNumber
                                        </span>
                                        <div class="small text-muted">
                                            <i class="fa-solid fa-gauge-high me-1"></i>@car.Kilometer km &bull; @car.GearType
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    @{
                                        string badgeClass = "";
                                        string iconClass = "";
                                        string statusText = "";

                                        switch (car.Status)
                                        {
                                            case CarRentalEmployeeApp.Models.VehicleStatus.Flexible:
                                                badgeClass = "bg-success bg-opacity-10 text-success";
                                                iconClass = "fa-circle-check";
                                                statusText = "Müsait";
                                                break;
                                            case CarRentalEmployeeApp.Models.VehicleStatus.Busy:
                                                badgeClass = "bg-danger bg-opacity-10 text-danger";
                                                iconClass = "fa-road";
                                                statusText = "Kirada";
                                                break;
                                            case CarRentalEmployeeApp.Models.VehicleStatus.Maintenance:
                                                badgeClass = "bg-warning bg-opacity-10 text-warning";
                                                iconClass = "fa-screwdriver-wrench";
                                                statusText = "Bakımda";
                                                break;
                                            default:
                                                badgeClass = "bg-secondary bg-opacity-10 text-secondary";
                                                iconClass = "fa-circle-question";
                                                statusText = "Bilinmiyor";
                                                break;
                                        }
                                    }
                                    <span class="badge @badgeClass px-3 py-2 rounded-pill fw-normal">
                                        <i class="fa-solid @iconClass me-1"></i> @statusText
                                    </span>
                                </td>

                                <td>
                                    @if (car.AssignedTo != null)
                                    {
                                        <div class="d-flex align-items-center">
                                            <div class="small fw-medium text-dark">
                                                <i class="fa-regular fa-user me-1 text-muted"></i>
                                                @car.AssignedTo.Name @car.AssignedTo.Surname
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small fst-italic">-- Atama Yok --</span>
                                    }
                                </td>

                                <td class="pe-4 text-end">
                                    <div class="btn-group gap-2">
                                        <a asp-action="DetailsEmploye" asp-route-id="@car.Id"
                                           class="btn btn-light btn-sm rounded-2 text-dark"
                                           data-bs-toggle="tooltip" title="Detay">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>

                                        <a asp-action="Updatecar" asp-route-id="@car.Id"
                                           class="btn btn-light btn-sm rounded-2 text-primary"
                                           data-bs-toggle="tooltip" title="Düzenle">
                                            <i class="fa-solid fa-pen-to-square"></i>
                                        </a>

                                        <form asp-action="Deletecar" asp-route-id="@car.Id" method="post" style="display:inline;" onsubmit="return confirm('Bu aracı silmek istediğinize emin misiniz?');">
                                            <button type="submit" class="btn btn-light btn-sm rounded-2 text-danger" data-bs-toggle="tooltip" title="Sil">
                                                <i class="fa-solid fa-trash-can"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Arama Scripti
        document.getElementById("searchInput")?.addEventListener("keyup", function () {
            let aranan = this.value.toLowerCase();
            let satirlar = document.getElementsByClassName("vehicle-row");

            for (let i = 0; i < satirlar.length; i++) {
                let satirMetni = satirlar[i].innerText.toLowerCase();
                satirlar[i].style.display = satirMetni.includes(aranan) ? "" : "none";
            }
        });

        // Tooltip Aktivasyonu
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}

<style>
    /* Tablo Hover Efekti */
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease-in-out;
    }

    /* Buton Hover Efektleri */
    .btn-light:hover {
        background-color: #e9ecef;
        border-color: #dee2e6;
    }
</style>