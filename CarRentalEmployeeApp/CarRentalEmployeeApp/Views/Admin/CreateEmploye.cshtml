@model CarRentalEmployeeApp.ViewModels.PersonelCreateViewModel

@{
    ViewData["Title"] = "Personel Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h4 class="fw-bold text-dark mb-1">Yeni Personel</h4>
                    <span class="text-muted small">Personel yönetim sistemine yeni kayıt ekleyin.</span>
                </div>
                <a href="#" class="btn btn-outline-secondary btn-sm px-3 rounded-2">
                    <i class="fa-solid fa-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>

            <div class="card border-0 shadow-sm rounded-3">
                <div class="card-body p-5">

                    <form asp-action="CreateEmploye" method="post">

                        <h6 class="text-uppercase text-muted fw-bold small mb-4">Kişisel Bilgiler</h6>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label fw-medium text-secondary small">AD</label>
                                <input asp-for="Name" class="form-control form-control-lg bg-light border-0 fs-6" placeholder="Örn: Ahmet" />
                                <span asp-validation-for="Name" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="Surname" class="form-label fw-medium text-secondary small">SOYAD</label>
                                <input asp-for="Surname" class="form-control form-control-lg bg-light border-0 fs-6" placeholder="Örn: Yılmaz" />
                                <span asp-validation-for="Surname" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="row g-4 mb-4">
                            <div class="col-md-6">
                                <label asp-for="Email" class="form-label fw-medium text-secondary small">E-POSTA ADRESİ</label>
                                <input asp-for="Email" class="form-control form-control-lg bg-light border-0 fs-6" placeholder="ad.soyad@sirket.com" />
                                <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-medium text-secondary small">TELEFON</label>
                                <input asp-for="PhoneNumber" class="form-control form-control-lg bg-light border-0 fs-6" placeholder="0555 000 00 00" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="col-12">
                                <label asp-for="Address" class="form-label fw-medium text-secondary small">ADRES</label>
                                <textarea asp-for="Address" class="form-control bg-light border-0 fs-6" rows="3" placeholder="Açık adres bilgisi..."></textarea>
                                <span asp-validation-for="Address" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <hr class="my-5 border-secondary border-opacity-10">

                        <h6 class="text-uppercase text-muted fw-bold small mb-4">Hesap & Güvenlik</h6>

                        <div class="row g-4">
                            <div class="col-md-6">
                                <label asp-for="Password" class="form-label fw-medium text-secondary small">ŞİFRE</label>
                                <input asp-for="Password" type="password" class="form-control form-control-lg bg-light border-0 fs-6" />
                                <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="ConfirmPassword" class="form-label fw-medium text-secondary small">ŞİFRE TEKRAR</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control form-control-lg bg-light border-0 fs-6" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-end align-items-center mt-5">
                            <button type="submit" class="btn btn-dark px-5 py-2 rounded-2 fw-medium">
                                Kaydı Tamamla
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}