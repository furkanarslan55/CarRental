@model CarRentalEmployeeApp.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .stat-card {
        border-radius: 18px;
        border: none;
        box-shadow: 0 4px 14px rgba(0, 0, 0, 0.06);
        transition: 0.3s;
    }

        .stat-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
        }

    .icon-box {
        width: 50px;
        height: 50px;
        border-radius: 14px;
        font-size: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .table-card {
        border-radius: 16px;
        overflow: hidden;
        border: none;
        box-shadow: 0 4px 14px rgba(0, 0, 0, 0.07);
    }

        .table-card .card-header {
            background: #fff;
            padding: 15px 20px;
            font-weight: 600;
            border-bottom: 1px solid #e5e5e5;
        }

    table thead {
        background: #f8f9fa;
        font-weight: 600;
    }

    table tbody tr:hover {
        background: #f3f6fb;
        cursor: pointer;
    }

    .list-group-item {
        padding: 12px 16px;
        font-size: 15px;
        border-left: 0;
        border-right: 0;
    }

        .list-group-item:hover {
            background: #f3f6fb;
        }
</style>





<!-- STAT KARTLARI -->
<div class="row g-3 mb-4">

    <div class="col-md-3">
        <div class="card stat-card p-3">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <p class="text-muted small fw-bold mb-1">Toplam Personel</p>
                    <h3 class="fw-bold m-0">@Model.TotalEmployees</h3>
                </div>
                <div class="icon-box bg-primary bg-opacity-10 text-primary">
                    <i class="fa-solid fa-users"></i>
                </div>
            </div>
        </div>
    </div>

</div>


<!-- TABLO VE PERSONEL LİSTESİ -->
<div class="row">

    <!-- Araç Durum Tablosu -->
    <div class="col-lg-8 mb-4">
        <div class="card table-card h-100">
            <div class="card-header">
                <i class="fa-solid fa-car me-2 text-primary"></i>
                Araç Durum Listesi
            </div>

            <div class="card-body p-0">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Plaka</th>
                            <th>Model</th>
                            <th>Durum</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var vehicle in Model.Vehicles)
                        {
                            <tr>
                                <td>@vehicle.PlateNumber</td>
                                <td>@vehicle.CarModel</td>
                                <td>
                                    @switch (vehicle.Status)
                                    {
                                        case VehicleStatus.flexible:
                                            <span class="badge rounded-pill bg-success bg-opacity-10 text-success px-3 py-2">
                                                <i class="fa-solid fa-check-circle me-1"></i> Mevcut
                                            </span>
                                            break;

                                        case VehicleStatus.busy:
                                            <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning px-3 py-2">
                                                <i class="fa-solid fa-clock me-1"></i> Kirada
                                            </span>
                                            break;

                                        case VehicleStatus.manintance:
                                            <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger px-3 py-2">
                                                <i class="fa-solid fa-screwdriver-wrench me-1"></i> Bakımda
                                            </span>
                                            break;
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>


    <!-- Personel Listesi -->
    <div class="col-lg-4 mb-4">
        <div class="card table-card h-100">
            <div class="card-header">
                <i class="fa-solid fa-users me-2 text-primary"></i>
                Personel Listesi
            </div>

            <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                    @foreach (var emp in Model.Employees.Take(5))
                    {
                        <li class="list-group-item d-flex align-items-center">
                            <i class="fa-solid fa-user text-secondary me-3"></i>
                            @emp.Name @emp.Surname
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

</div>
