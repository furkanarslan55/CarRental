@model CarRentalEmployeeApp.ViewModels.AdminDashboardViewModel
@{
    Layout = null; 
    ViewData["Title"] = "Yönetim Paneli";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Araç Kiralama Sistemi</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f6f9;
            overflow-x: hidden;
        }

        /* Sidebar Tasarımı */
        .sidebar {
            min-height: 100vh;
            width: 260px;
            background: #212529;
            color: #fff;
            position: fixed;
            transition: all 0.3s;
        }

        .sidebar-header {
            padding: 20px;
            background: #1a1d20;
            border-bottom: 1px solid #343a40;
        }

        .sidebar a {
            color: #adb5bd;
            text-decoration: none;
            padding: 15px 20px;
            display: block;
            border-left: 3px solid transparent;
            transition: 0.3s;
        }

            .sidebar a:hover, .sidebar a.active {
                color: #fff;
                background: #343a40;
                border-left-color: #0d6efd;
            }

        .sidebar i {
            width: 25px;
            text-align: center;
            margin-right: 10px;
        }

        /* Ana İçerik Alanı */
        .content {
            margin-left: 260px;
            padding: 20px;
        }

        /* İstatistik Kartları */
        .stat-card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            transition: transform 0.2s;
            background: #fff;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 15px rgba(0,0,0,0.1);
            }

        .icon-box {
            width: 50px;
            height: 50px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
        }

        /* Tablo Kartları */
        .table-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.05);
            border: none;
            overflow: hidden;
        }

            .table-card .card-header {
                background: #fff;
                border-bottom: 1px solid #eee;
                padding: 15px 20px;
                font-weight: 600;
            }

        .table th {
            font-weight: 600;
            color: #495057;
            background-color: #f8f9fa;
            border-bottom: 2px solid #e9ecef;
        }

        .table td {
            vertical-align: middle;
        }

        /* Responsive Ayar */
        @@media (max-width: 768px) {
            .sidebar

        {
            margin-left: -260px;
        }

        .content {
            margin-left: 0;
        }

        }
    </style>
</head>
<body>

    <div class="sidebar d-flex flex-column">
        <div class="sidebar-header d-flex align-items-center">
            <i class="fa-solid fa-car-side fa-lg text-primary me-2"></i>
            <h5 class="m-0 fw-bold">Filo Yönetim</h5>
        </div>
        <div class="mt-3">
            <a href="#" class="active"><i class="fa-solid fa-gauge-high"></i> Dashboard</a>
            <a href="/Admin/CreateCar"><i class="fa-solid fa-plus"></i> Araç Ekle</a>
            <a href="/Account/Register"><i class="fa-solid fa-user-plus"></i> Personel Ekle</a>
            <a href="#"><i class="fa-solid fa-chart-line"></i> Raporlar</a>
            <a href="#"><i class="fa-solid fa-gear"></i> Ayarlar</a>
        </div>
        <div class="mt-auto p-3">
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-link text-danger text-decoration-none p-0 border-0">
                    <i class="fa-solid fa-right-from-bracket"></i> Çıkış Yap
                </button>
            </form>
        </div>
    </div>

    <div class="content">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold text-dark">Genel Bakış</h2>
                <p class="text-muted">Hoşgeldiniz, @User.Identity.Name</p>
            </div>
            <div class="d-flex align-items-center">
                <div class="dropdown">
                    <button class="btn btn-white shadow-sm dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <i class="fa-solid fa-user-circle me-1"></i>@User.Identity.Name
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Profil</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="dropdown-item text-danger border-0 bg-transparent w-100 text-start">
                                    Çıkış
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-3">
                <div class="card stat-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 text-uppercase small fw-bold">Toplam Personel</p>
                            <h3 class="fw-bold mb-0">@Model.TotalEmployees</h3>
                        </div>
                        <div class="icon-box bg-primary bg-opacity-10 text-primary">
                            <i class="fa-solid fa-users"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 text-uppercase small fw-bold">Mevcut Araçlar</p>
                            <h3 class="fw-bold mb-0">@Model.AvailableVehicles</h3>
                        </div>
                        <div class="icon-box bg-success bg-opacity-10 text-success">
                            <i class="fa-solid fa-check"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 text-uppercase small fw-bold">Kiradaki Araçlar</p>
                            <h3 class="fw-bold mb-0">@Model.RentedVehicles</h3>
                        </div>
                        <div class="icon-box bg-warning bg-opacity-10 text-warning">
                            <i class="fa-solid fa-key"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card stat-card p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <p class="text-muted mb-1 text-uppercase small fw-bold">Bakımdaki Araçlar</p>
                            <h3 class="fw-bold mb-0">@Model.MaintenanceVehicles</h3>
                        </div>
                        <div class="icon-box bg-danger bg-opacity-10 text-danger">
                            <i class="fa-solid fa-screwdriver-wrench"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8 mb-4">
                <div class="card table-card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span><i class="fa-solid fa-car me-2"></i>Araç Durum Listesi</span>
                        <a href="/Admin/CreateCar" class="btn btn-sm btn-primary rounded-pill px-3">Yeni Ekle</a>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th class="ps-4">Plaka</th>
                                        <th>Model</th>
                                        <th>Durum</th>
                                        <th class="text-end pe-4">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var vehicle in Model.Vehicles)
                                    {
                                        <tr>
                                            <td class="ps-4 fw-bold">@vehicle.PlateNumber</td>
                                            <td>@vehicle.CarModel</td>
                                            <td>
                                                @switch (vehicle.Status)
                                                {
                                                    case VehicleStatus.Available:
                                                        <span class="badge rounded-pill bg-success bg-opacity-10 text-success px-3 py-2">
                                                            <i class="fa-solid fa-check-circle me-1"></i> Mevcut
                                                        </span>
                                                        break;
                                                    case VehicleStatus.Rented:
                                                        <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning px-3 py-2">
                                                            <i class="fa-solid fa-clock me-1"></i> Kirada
                                                        </span>
                                                        break;
                                                    case VehicleStatus.Maintenance:
                                                        <span class="badge rounded-pill bg-danger bg-opacity-10 text-danger px-3 py-2">
                                                            <i class="fa-solid fa-triangle-exclamation me-1"></i> Bakımda
                                                        </span>
                                                        break;
                                                }
                                            </td>
                                            <td class="text-end pe-4">
                                                <button class="btn btn-sm btn-light text-primary"><i class="fa-solid fa-pen"></i></button>
                                                <button class="btn btn-sm btn-light text-danger"><i class="fa-solid fa-trash"></i></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 mb-4">
                <div class="card table-card h-100">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <span><i class="fa-solid fa-users-gear me-2"></i>Personel</span>
                        <a href="/Account/Register" class="btn btn-sm btn-outline-secondary rounded-pill">Ekle</a>
                    </div>
                    <div class="card-body p-0">
                        <ul class="list-group list-group-flush">
                            @foreach (var emp in Model.Employees.Take(5))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-secondary bg-opacity-10 rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 40px; height: 40px;">
                                            <span class="fw-bold text-secondary">@emp.Name.Substring(0, 1)</span>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@emp.Name @emp.Surname</h6>
                                            <small class="text-muted">@emp.PhoneNumber</small>
                                        </div>
                                    </div>
                                    <button class="btn btn-link text-muted"><i class="fa-solid fa-ellipsis-vertical"></i></button>
                                </li>
                            }
                        </ul>
                    </div>
                    <div class="card-footer text-center bg-white border-0 py-3">
                        <a href="#" class="text-decoration-none small fw-bold">Tümünü Gör</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>