@model CarRentalEmployeeApp.ViewModels.EmployeeDetailViewModel

@{
    ViewData["Title"] = "Çalışan Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-5">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark mb-1">Çalışan Profili</h4>
            <span class="text-muted small">Personel detayları ve zimmet bilgileri.</span>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="GetEmploye" class="btn btn-outline-secondary btn-sm px-3 rounded-2">
                <i class="fa-solid fa-arrow-left me-1"></i> Listeye Dön
            </a>
            <a asp-action="UpdateEmploye" asp-route-id="@Model.Id" class="btn btn-primary btn-sm px-3 rounded-2">
                <i class="fa-solid fa-pen-to-square me-1"></i> Düzenle
            </a>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm rounded-4 h-100 overflow-hidden">
                <div class="card-body p-0">
                    <div class="bg-light p-4 text-center border-bottom border-secondary border-opacity-10">
                        <div class="avatar-circle mx-auto mb-3 bg-white shadow-sm text-primary d-flex align-items-center justify-content-center rounded-circle" style="width: 100px; height: 100px; font-size: 2.5rem; font-weight: bold;">
                            @Model.Name.Substring(0, 1)@Model.Surname.Substring(0, 1)
                        </div>
                        <h5 class="fw-bold text-dark mb-1">@Model.Name @Model.Surname</h5>
                        <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill fw-normal">Aktif Personel</span>
                    </div>

                    <div class="p-4">
                        <h6 class="text-uppercase text-muted small fw-bold mb-3">İletişim Bilgileri</h6>

                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-square bg-light text-dark rounded-2 p-2 me-3">
                                <i class="fa-regular fa-envelope"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">E-Posta</small>
                                <span class="fw-medium text-dark">@Model.Email</span>
                            </div>
                        </div>

                        <div class="d-flex align-items-center">
                            <div class="icon-square bg-light text-dark rounded-2 p-2 me-3">
                                <i class="fa-solid fa-phone"></i>
                            </div>
                            <div>
                                <small class="text-muted d-block">Telefon</small>
                                <span class="fw-medium text-dark">@Model.PhoneNumber</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 h-100">
                <div class="card-header bg-white border-0 py-3 px-4">
                    <div class="d-flex align-items-center">
                        <i class="fa-solid fa-car-side text-primary me-2"></i>
                        <h6 class="fw-bold text-dark mb-0">Zimmetli Araçlar</h6>
                    </div>
                </div>

                <div class="card-body p-0">
                    @if (Model.Vehicles != null && Model.Vehicles.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="bg-light">
                                    <tr>
                                        <th class="py-3 ps-4 text-secondary text-uppercase small fw-bold">PLAKA</th>
                                        <th class="py-3 text-secondary text-uppercase small fw-bold">ARAÇ MODELİ</th>
                                        <th class="py-3 text-end pe-4 text-secondary text-uppercase small fw-bold">İŞLEM</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var vehicle in Model.Vehicles)
                                    {
                                        <tr>
                                            <td class="ps-4">
                                                <span class="badge bg-light text-dark border border-secondary border-opacity-25 font-monospace">
                                                    @vehicle.Plate
                                                </span>
                                            </td>
                                            <td>
                                                <span class="fw-medium text-dark">@vehicle.Brand</span>
                                            </td>
                                            <td class="text-end pe-4">
                                                <a href="/Car/Details/@vehicle.Id" class="btn btn-light btn-sm text-primary rounded-2">
                                                    <i class="fa-solid fa-arrow-right-long"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5 px-4">
                            <div class="mb-3 text-muted opacity-25">
                                <i class="fa-solid fa-key fa-3x"></i>
                            </div>
                            <h6 class="fw-bold text-muted">Zimmetli araç yok</h6>
                            <p class="text-muted small mb-0">Bu personele henüz bir araç atanmamış.</p>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>
</div>