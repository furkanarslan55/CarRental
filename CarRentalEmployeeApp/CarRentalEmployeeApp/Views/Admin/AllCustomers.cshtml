@model List<Customer>
@{
    ViewData["Title"] = "Müşteri Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-5">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark mb-1">Müşteri Portföyü</h4>
            <span class="text-muted small">Kayıtlı müşteriler ve sorumlu personel bilgileri.</span>
        </div>

        <div class="mt-3 mt-md-0 position-relative">
            <span class="position-absolute top-50 start-0 translate-middle-y ms-3 text-muted">
                <i class="fa-solid fa-magnifying-glass"></i>
            </span>
            <input id="searchInput" class="form-control form-control-lg border-0 bg-white shadow-sm ps-5" placeholder="Müşteri ara (Ad, ID, Email)..." style="min-width: 300px; font-size: 0.95rem;">
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-3 text-muted opacity-25">
                    <i class="fa-solid fa-users-slash fa-4x"></i>
                </div>
                <h5 class="fw-bold text-muted">Kayıtlı müşteri yok</h5>
                <p class="text-muted small mb-0">Sistemde henüz bir müşteri kaydı bulunmamaktadır.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" id="customerTable">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-secondary text-uppercase small fw-bold" style="width: 5%;">ID</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold">MÜŞTERİ ADI</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold">İLETİŞİM</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold" style="width: 25%;">ADRES</th>
                            <th class="py-3 pe-4 text-secondary text-uppercase small fw-bold">ATANAN PERSONEL</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @foreach (var customer in Model)
                        {
                            <tr class="customer-row">
                                <td class="ps-4 fw-bold text-muted small">#@customer.Id</td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-primary bg-opacity-10 text-primary d-flex justify-content-center align-items-center me-3" style="width: 40px; height: 40px; font-weight: bold;">
                                            @customer.Name.Substring(0, 1)@customer.Surname.Substring(0, 1)
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@customer.Name @customer.Surname</div>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex flex-column">
                                        <span class="text-dark small mb-1">
                                            <i class="fa-regular fa-envelope me-2 text-muted" style="width:16px;"></i>@customer.Email
                                        </span>
                                        <span class="text-muted small">
                                            <i class="fa-solid fa-phone me-2 text-muted" style="width:16px;"></i>@customer.PhoneNumber
                                        </span>
                                    </div>
                                </td>

                                <td>
                                    <span class="text-muted small d-inline-block text-truncate" style="max-width: 250px;" title="@customer.Address">
                                        <i class="fa-solid fa-location-dot me-1 text-secondary opacity-50"></i> @customer.Address
                                    </span>
                                </td>

                                <td class="pe-4">
                                    @if (customer.Employee != null)
                                    {
                                        <div class="d-flex align-items-center px-3 py-1 rounded-pill bg-success bg-opacity-10 border border-success border-opacity-10" style="width: fit-content;">
                                            <div class="rounded-circle bg-success text-white d-flex align-items-center justify-content-center me-2" style="width: 24px; height: 24px; font-size: 0.7rem;">
                                                <i class="fa-solid fa-user"></i>
                                            </div>
                                            <span class="text-success fw-medium small">@customer.Employee.Name @customer.Employee.Surname</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center px-3 py-1 rounded-pill bg-secondary bg-opacity-10 border border-secondary border-opacity-10" style="width: fit-content;">
                                            <i class="fa-solid fa-circle-exclamation me-2 text-secondary small"></i>
                                            <span class="text-secondary fw-medium small">Sorumlu Yok</span>
                                        </div>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<script>
    document.getElementById("searchInput")?.addEventListener("keyup", function () {
        let value = this.value.toLowerCase();
        let rows = document.querySelectorAll("#customerTable tbody tr");

        rows.forEach(row => {
            let rowText = row.innerText.toLowerCase();
            row.style.display = rowText.includes(value) ? "" : "none";
        });
    });
</script>

<style>
    /* Tablo Hover Efekti */
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }
</style>