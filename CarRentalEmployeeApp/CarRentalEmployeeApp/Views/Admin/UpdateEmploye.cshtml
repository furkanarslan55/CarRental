@model CarRentalEmployeeApp.ViewModels.UpdateEmployeViewModel
@{
    ViewData["Title"] = "Update Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center rounded-top-4">
                    <h4 class="mb-0">👤 Personel Bilgilerini Güncelle</h4>
                </div>

                <div class="card-body p-4">
                    @using (Html.BeginForm("UpdateEmploye", "Admin", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)

                        <div class="row g-3">
                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Name, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Ad" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-md-6">
                                @Html.LabelFor(m => m.Surname, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", placeholder = "Soyad" })
                                @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-12">
                                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "E-posta" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-12">
                                @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Telefon Numarası" })
                                @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger small" })
                            </div>

                            <div class="col-12">
                                @Html.LabelFor(m => m.Address, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Adres" })
                            </div>
                        </div>

                        <hr class="my-4" />

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("GetEmploye", "Admin")" class="btn btn-outline-secondary px-4">
                                ❌ İptal
                            </a>
                            <button type="submit" class="btn btn-primary px-4">
                                💾 Güncelle
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
