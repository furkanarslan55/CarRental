@model List<CarRentalEmployeeApp.ViewModels.EmployeeListViewModel>

@{
    ViewData["Title"] = "Get Employee Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}


@if (Model.Count == 0)
{
    <div class="alert alert-info" role="alert">
        Kayıtlı personel bulunmamaktadır.
    </div>
}
else
{
    <h2>Personel Listesi</h2>

    <input type="text"
           id="searchInput"
           class="form-control mb-3"
           placeholder="İsim ara..." />

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Email</th>
                <th>Telefon</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="employee-row">
                    <td>@item.Id</td>
                    <td class="employee-name">@item.Name</td>
                    <td>@item.Surname</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <a asp-action="DetailsEmploye"
                           asp-route-id="@item.Id"
                           class="btn btn-info btn-sm">
                            Detay
                        </a>

                        <a asp-action="UpdateEmploye"
                           asp-route-id="@item.Id"
                           class="btn btn-warning btn-sm">
                            Düzenle
                        </a>

                        <a asp-action="DeleteEmploye"
                           asp-route-id="@item.Id"
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Silmek istediğinize emin misiniz?')">
                            Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<script>
    document.getElementById("searchInput")?.addEventListener("keyup", function () {
        let aranan = this.value.toLowerCase();
        let satirlar = document.getElementsByClassName("employee-row");

        for (let i = 0; i < satirlar.length; i++) {
            let satirMetni = satirlar[i].innerText.toLowerCase();

            if (satirMetni.includes(aranan)) {
                satirlar[i].style.display = "";
            } else {
                satirlar[i].style.display = "none";
            }
        }
    });
</script>
