@model List<CarRentalEmployeeApp.Models.Vehicle>

@{
    ViewData["Title"] = "Araç Atama";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

<div class="container py-5">

    <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold text-dark mb-1">Atama İçin Uygun Araçlar</h4>
            <span class="text-muted small">Personel zimmetlemesi için müsait durumdaki araçlar listeleniyor.</span>
        </div>

        <div class="mt-3 mt-md-0 position-relative">
            <span class="position-absolute top-50 start-0 translate-middle-y ms-3 text-muted">
                <i class="fa-solid fa-magnifying-glass"></i>
            </span>
            <input type="text" id="searchInput" class="form-control form-control-lg border-0 bg-white shadow-sm ps-5" placeholder="Plaka veya model ara..." style="min-width: 300px; font-size: 0.95rem;">
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

        @if (!Model.Any())
        {
            <div class="text-center py-5">
                <div class="mb-3 text-muted opacity-25">
                    <i class="fa-solid fa-car-on-side fa-4x"></i>
                </div>
                <h5 class="fw-bold text-muted">Uygun araç bulunamadı</h5>
                <p class="text-muted small mb-0">Şu anda atama yapılabilecek boşta araç yok.</p>
                <div class="mt-4">
                    <a href="/Car/Index" class="btn btn-outline-secondary rounded-pill px-4">
                        <i class="fa-solid fa-arrow-left me-2"></i>Tüm Araçlara Dön
                    </a>
                </div>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th class="py-3 ps-4 text-secondary text-uppercase small fw-bold">ARAÇ BİLGİSİ</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold">PLAKA</th>
                            <th class="py-3 text-secondary text-uppercase small fw-bold">KİLOMETRE</th>
                            <th class="py-3 pe-4 text-end text-secondary text-uppercase small fw-bold">İŞLEM</th>
                        </tr>
                    </thead>
                    <tbody class="border-top-0">
                        @foreach (var car in Model)
                        {
                            <tr class="vehicle-row">
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="rounded-circle bg-success bg-opacity-10 text-success d-flex justify-content-center align-items-center me-3" style="width: 45px; height: 45px;">
                                            <i class="fa-solid fa-check"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark vehicle-name">@car.CarModel</div>
                                            <div class="small text-muted">@car.Year Model</div>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <span class="badge bg-light text-dark border border-secondary border-opacity-25 rounded-1 font-monospace fs-6">
                                        @car.PlateNumber
                                    </span>
                                </td>

                                <td>
                                    <span class="text-muted small fw-medium">
                                        <i class="fa-solid fa-gauge-high me-2 text-secondary"></i>@car.Kilometer km
                                    </span>
                                </td>

                                <td class="text-end pe-4">
                                    <a asp-action="AssignmentToEmployee"
                                       asp-route-id="@car.Id"
                                       class="btn btn-dark btn-sm rounded-2 shadow-sm px-3">
                                        Seç ve Ata <i class="fa-solid fa-arrow-right ms-2"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Arama Scripti
        document.getElementById("searchInput")?.addEventListener("keyup", function () {
            let aranan = this.value.toLowerCase();
            let satirlar = document.getElementsByClassName("vehicle-row");

            for (let i = 0; i < satirlar.length; i++) {
                let satirMetni = satirlar[i].innerText.toLowerCase();
                satirlar[i].style.display = satirMetni.includes(aranan) ? "" : "none";
            }
        });
    </script>
}

<style>
    /* Tablo Hover Efekti */
    .table-hover tbody tr:hover {
        background-color: #f8f9fa;
        cursor: pointer;
        transition: background-color 0.2s ease;
    }
</style>