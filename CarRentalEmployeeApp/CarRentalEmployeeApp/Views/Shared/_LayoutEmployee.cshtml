@{
    var userName = User.FindFirst("Name")?.Value ;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            overflow-x: hidden;
        }

        /* Sidebar */
        #sidebar {
            width: 250px;
            position: fixed;
            left: 0;
            top: 0;
            height: 100vh;
            background: #1e1e2f;
            color: white;
            transition: all .3s;
            padding-top: 60px;
        }

            #sidebar.collapsed {
                width: 70px;
            }

            #sidebar a {
                color: white;
                padding: 15px;
                display: block;
                text-decoration: none;
            }

                #sidebar a:hover {
                    background: #34344a;
                }

        /* Content */
        #content {
            margin-left: 250px;
            transition: all .3s;
            padding: 20px;
        }

        #sidebar.collapsed + #content {
            margin-left: 70px;
        }

        /* Header */
        .header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 60px;
            background: #ffffff;
            border-bottom: 1px solid #ddd;
            padding: 10px 20px;
            display: flex;
            align-items: center;
            z-index: 1000;
            justify-content: space-between;
        }

        .sidebar-toggle {
            font-size: 24px;
            cursor: pointer;
        }
    </style>
</head>

<body>

    <!-- Header -->
    <div class="header">
        <span class="sidebar-toggle" onclick="toggleSidebar()">&#9776;</span>

        <div class="fw-bold">Hoşgeldiniz, @userName</div>

        <div>
            <a href="/Account/Manage">Hesabım</a> |
            <a href="/Account/Logout">Çıkış</a>
        </div>
    </div>

    <!-- Sidebar -->
    <div id="sidebar">
        <a href="/Employee/Dashboard">Dashboard</a>
        <a href="/Employee/Profile">Profil</a>
        <a href="/Employee/Calendar">Takvim</a>
        <a href="/Employee/Settings">Ayarlar</a>
    </div>

    <!-- Content -->
    <div id="content">
        @RenderBody()
    </div>

    <script>
        function toggleSidebar() {
            document.getElementById("sidebar").classList.toggle("collapsed");
        }
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
