<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f6f9;
            overflow-x: hidden; /* Taşmayı tamamen engeller */
        }

        /* -------- SIDEBAR -------- */
        .sidebar {
            min-height: 100vh;
            width: 260px;
            background: #212529;
            color: #fff;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }

        .sidebar-header {
            padding: 20px;
            background: #1a1d20;
            border-bottom: 1px solid #343a40;
        }

        .sidebar a {
            color: #adb5bd;
            text-decoration: none;
            padding: 15px 20px;
            display: block;
            transition: 0.3s;
        }

            .sidebar a:hover {
                color: #fff;
                background: #343a40;
            }

        .sidebar i {
            width: 25px;
            text-align: center;
            margin-right: 10px;
        }

        /* -------- HEADER -------- */
        .header {
            height: 60px;
            background: #ffffff;
            border-bottom: 1px solid #e0e0e0;
            position: fixed;
            top: 0;
            left: 260px;
            width: calc(100% - 260px); /* Sidebar'a göre ayarlandı */
            z-index: 999;
            display: flex;
            justify-content: flex-end;
            align-items: center;
            padding: 0 25px;
        }

        .user-icon {
            width: 37px;
            height: 37px;
            border-radius: 50%;
            background: #dee2e6;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            color: #495057;
            margin-right: 10px;
        }

        /* -------- CONTENT -------- */
        .content {
            margin-left: 260px;
            padding: 30px;
            margin-top: 60px; /* Header yüksekliği kadar boşluk */
            width: calc(100% - 260px);
        }

        @@media (max-width: 768px) {

            .sidebar {
                display: none;
            }

            .header {
                left: 0;
                width: 100%;
            }

            .content {
                margin-left: 0;
                width: 100%;
            }
        }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div class="sidebar d-flex flex-column">
        <div class="sidebar-header">
            <h6 class="m-0 fw-bold"><i class="fa-solid fa-id-card-clip me-2 text-success"></i>Personel Portalı</h6>
        </div>
        <div class="mt-3">
            <a href="/Employee/Index"><i class="fa-solid fa-clipboard-list"></i> İş Listem</a>
            <a href="/Employee/DashboardCustomer"><i class="fa-solid fa-users"></i> Müşterilerim</a>
            <a href="#"><i class="fa-solid fa-car"></i> Araç İşlemleri</a>
        </div>
        <div class="mt-auto p-3">
            <form asp-controller="Account" asp-action="Logout" method="post">
                <button type="submit" class="btn btn-link text-danger text-decoration-none p-0 border-0">
                    <i class="fa-solid fa-right-from-bracket"></i> Çıkış Yap
                </button>
            </form>
        </div>
    </div>

    <!-- HEADER -->
    <div class="header">
        <div class="dropdown">
            <a class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle" href="#" data-bs-toggle="dropdown">
                <div class="user-icon">
                    @{
                        var username = User?.Identity?.Name ?? "K";
                        var firstLetter = username.Substring(0, 1).ToUpper();
                    }
                    @firstLetter
                </div>
                <span>@username</span>
            </a>

            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                <li><a class="dropdown-item" href="/Account/Profile"><i class="fa-solid fa-user me-2"></i> Hesabım</a></li>
                <li><a class="dropdown-item" href="/Account/Settings"><i class="fa-solid fa-gear me-2"></i> Ayarlar</a></li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <form asp-controller="Account" asp-action="Logout" method="post">
                        <button class="dropdown-item text-danger" type="submit">
                            <i class="fa-solid fa-right-from-bracket me-2"></i> Çıkış Yap
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>

    <!-- CONTENT -->
    <div class="content">
        @RenderBody()
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
