@model List<CarRentalEmployeeApp.Models.Customers>
@{
    ViewData["Title"] = "Müşteri Portföyü";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-dark mb-1">Müşteri Portföyü</h2>
        <p class="text-muted mb-0">Sorumluluğunuzdaki müşterilerin iletişim bilgileri ve geçmişi.</p>
    </div>
    <a class="btn btn-primary shadow-sm" href="/Employee/AddCustomer">
        Yeni Müşteri
    </a>
</div>

<div class="card mb-4">
    <div class="card-body p-2">
        <div class="input-group">
            <span class="input-group-text bg-white border-0 ps-3"><i class="fa-solid fa-search text-muted"></i></span>
            <input type="text" class="form-control border-0" placeholder="İsim, e-posta veya telefon ile arayın...">
            <button class="btn btn-light border ms-2">Filtrele</button>
        </div>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="card table-card">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th class="ps-4">Müşteri Adı</th>
                            <th>İletişim</th>
                            <th>Lokasyon</th>
                            <th class="text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var customer in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-circle">
                                            @customer.Name.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@customer.Name</div>
                                            <small class="text-muted">ID: #@customer.Id</small>
                                        </div>
                                    </div>
                                </td>

                                <td>
                                    <div class="d-flex flex-column">
                                        <a href="mailto:@customer.Email" class="text-decoration-none text-muted mb-1 small">
                                            <i class="fa-regular fa-envelope me-1"></i> @customer.Email
                                        </a>
                                        <a href="tel:@customer.PhoneNumber" class="text-decoration-none text-dark fw-bold small">
                                            <i class="fa-solid fa-phone me-1 text-success"></i> @customer.PhoneNumber
                                        </a>
                                    </div>
                                </td>

                                <td>
                                    <span class="text-muted small">
                                        <i class="fa-solid fa-location-dot me-1 text-danger"></i> @customer.Address
                                    </span>
                                </td>

                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a href="#" class="btn btn-sm btn-light text-primary border" title="Detaylar">
                                            <i class="fa-solid fa-eye"></i>
                                        </a>
                                        <a href="#" class="btn btn-sm btn-light text-secondary border" title="Düzenle">
                                            <i class="fa-solid fa-pen"></i>
                                        </a>
                                        <a href="tel:@customer.PhoneNumber" class="btn btn-sm btn-success bg-opacity-10 text-success border-0" title="Hemen Ara">
                                            <i class="fa-solid fa-phone"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer bg-white border-top text-center py-3">
            <small class="text-muted">Toplam @Model.Count müşteri görüntüleniyor.</small>
        </div>
    </div>
}
else
{
    <div class="card empty-state shadow-sm">
        <div class="card-body">
            <i class="fa-solid fa-users-slash empty-icon"></i>
            <h4 class="fw-bold text-dark">Henüz Müşteri Yok</h4>
            <p class="text-muted">Şu anda sorumluluğunuzda atanmış herhangi bir müşteri bulunmamaktadır.</p>
            <a href="/Employee/AddCustomer" class="btn btn-outline-primary mt-2">
                <i class="fa-solid fa-plus me-2"></i>Müşteri Ekle
            </a>
        </div>
    </div>
}
